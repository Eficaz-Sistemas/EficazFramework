@inherits LayoutComponentBase

<PageTitle>EficazFramework.Tests.Blazor.Views</PageTitle>

<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="DocsDrawerToggle" />
        <MudText Typo="Typo.subtitle2">TestComponents</MudText>
        <MudSpacer />
    </MudAppBar>
    <MudDrawer @bind-Open="@drawerOpen" 
               Variant="DrawerVariant.Temporary" 
               ClipMode="DrawerClipMode.Always" 
               Breakpoint="Breakpoint.Xxl">
        <MudNavMenu Class="pa-2">
            <MudNavGroup Title="Components" Expanded=@(IsSubGroupExpanded("/Components/")) ExpandIcon="@Icons.Material.Filled.ExpandMore">
                <MudNavLink Href="Components/DataViews/ExpressionBuilder">ExpressionBuilder</MudNavLink>
                <MudNavLink Href="Components/Dialogs/ViewModelDialog">ViewModelDialog</MudNavLink>
            </MudNavGroup>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent Class="ef-paper ef-vh-fit d-flex">
        <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="mt-4 d-flex flex-column">
            <CascadingValue Name="UsePopoverProvider" Value="false"  IsFixed="true">
                <h3 class="mb-4">@NavigationManager?.Uri.Substring((NavigationManager?.Uri.LastIndexOf("/") ?? 0) + 1)</h3>
                @Body
            </CascadingValue>
        </MudContainer>
    </MudMainContent>
</MudLayout>