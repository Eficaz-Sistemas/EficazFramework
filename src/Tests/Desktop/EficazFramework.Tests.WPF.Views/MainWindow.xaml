<Window x:Class="EficazFramework.Tests.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EficazFramework.Tests.WPF.Views"
        xmlns:System="clr-namespace:System;assembly=mscorlib"  
        xmlns:EfExpr="clr-namespace:EficazFramework.Expressions;assembly=EficazFramework.Expressions"
        xmlns:EfControls="clr-namespace:EficazFramework.Controls;assembly=EficazFramework.WPF"
        xmlns:EfAttachedProps="clr-namespace:EficazFramework.Controls.AttachedProperties;assembly=EficazFramework.WPF"
        xmlns:Resources="clr-namespace:EficazFramework.Tests.WPF.Views.Resources"
        mc:Ignorable="d"
        d:Background="{DynamicResource Brush.Surface.Background}"
        Style="{DynamicResource Style.Window.Modern}"
        Title="EficazFramework Wpf Preview" Height="765" d:Height="1000" Width="1020" 
        Icon="/EficazFramework.Tests.WPF.Views;component/logo.png">
    <Window.CommandBindings>
        <CommandBinding x:Name="ShutdownCmd" Command="{x:Static SystemCommands.CloseWindowCommand}" Executed="ShutdownCmd_Executed" />
        <CommandBinding x:Name="FullScreenCmd" Command="{x:Static SystemCommands.MaximizeWindowCommand}" Executed="FullScreenCmd_Executed" />
        <CommandBinding x:Name="RestoreCmd" Command="{x:Static SystemCommands.RestoreWindowCommand}" Executed="RestoreCmd_Executed" />
        <CommandBinding x:Name="MininizeCms" Command="{x:Static SystemCommands.MinimizeWindowCommand}" Executed="MininizeCms_Executed" />
    </Window.CommandBindings>
    <TabControl x:Name="maintab"
                TabStripPlacement="Left"
                EfAttachedProps:TabControl.NavigationTemplateShowTitle="True"
                EfAttachedProps:TabControl.NavigationTemplate="True">
        <TabItem Header="Eficaz Framework - .NET 6.x">
            <Grid>
                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                    <EfControls:Icon Data="{DynamicResource Icon.Brand.EF}" 
                               Width="128" Height="128"/>
                    <TextBlock Text="Eficaz Framework"
                               Margin="0,15,0,0"
                               Style="{DynamicResource Style.TextBlock.SubHeader}" />
                    <Button Click="Button_Click" 
                            Margin="15,30,15,15" 
                            Padding="15" 
                            EfAttachedProps:Control.Elevation="3"
                            EfAttachedProps:Control.CornerRadius="8">Getting Started</Button>
                </StackPanel>
                <Rectangle HorizontalAlignment="Right" Width="180" Opacity="0.3">
                    <Rectangle.OpacityMask>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <LinearGradientBrush.RelativeTransform>
                                <TransformGroup>
                                    <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                    <SkewTransform CenterX="0.5" CenterY="0.5"/>
                                    <RotateTransform Angle="-90" CenterX="0.5" CenterY="0.5"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </LinearGradientBrush.RelativeTransform>
                            <GradientStop Color="Transparent"/>
                            <GradientStop Color="White" Offset="0.2"/>
                        </LinearGradientBrush>
                    </Rectangle.OpacityMask>
                    <Rectangle.Fill>
                        <ImageBrush Stretch="None" TileMode="Tile" Viewport="0,0,109,168" ViewportUnits="Absolute">
                            <ImageBrush.RelativeTransform>
                                <TransformGroup>
                                    <ScaleTransform CenterY="0.5" CenterX="0.5" ScaleX="0.8" ScaleY="0.8"/>
                                    <SkewTransform CenterX="0.5" CenterY="0.5"/>
                                    <RotateTransform CenterX="0.5" CenterY="0.5"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </ImageBrush.RelativeTransform>
                            <ImageBrush.ImageSource>
                                <BitmapImage CacheOption="OnLoad" CreateOptions="IgnoreImageCache" UriSource="/EficazFramework.Tests.WPF.Views;component/Resources/grafismo.png"/>
                            </ImageBrush.ImageSource>
                        </ImageBrush>
                    </Rectangle.Fill>
                </Rectangle>
            </Grid>
        </TabItem>
        <TabItem Header="Buttons" 
                 EfAttachedProps:TabControl.Icon="{DynamicResource Icon.MaterialDesign.PlayCircle}">
            <UniformGrid Margin="15" Columns="5"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center">
                <TextBlock Text="Inherited from Parent:" VerticalAlignment="Center" TextAlignment="Right"/>
                <Button Margin="3" x:Name="TEST_Button_0">Normal</Button>
                <Button Margin="3" IsEnabled="False">Disabled</Button>
                <Button Margin="3">
                    <StackPanel Orientation="Horizontal">
                        <EfControls:Icon Width="20" Height="20" Data="{DynamicResource Icon.MaterialDesign.CodeBraces}"/>
                        <TextBlock Margin="6,0,0,0">w/ Icon</TextBlock>
                    </StackPanel>
                </Button>
                <Button Margin="3" IsEnabled="False">
                    <StackPanel Orientation="Horizontal">
                        <EfControls:Icon Width="20" Height="20" Data="{DynamicResource Icon.MaterialDesign.CodeBraces}"/>
                        <TextBlock Margin="6,0,0,0">Disabled w/ Icon</TextBlock>
                    </StackPanel>
                </Button>

                <TextBlock Text="Surface:" VerticalAlignment="Center" TextAlignment="Right"/>
                <Button Margin="3" EfAttachedProps:Control.Color="Surface">Normal</Button>
                <Button Margin="3" EfAttachedProps:Control.Color="Surface" IsEnabled="False">Disabled</Button>
                <Button Margin="3" EfAttachedProps:Control.Color="Surface">
                    <StackPanel Orientation="Horizontal">
                        <EfControls:Icon Width="20" Height="20" Data="{DynamicResource Icon.MaterialDesign.CodeBraces}"/>
                        <TextBlock Margin="6,0,0,0">w/ Icon</TextBlock>
                    </StackPanel>
                </Button>
                <Button Margin="3" IsEnabled="False" EfAttachedProps:Control.Color="Surface">
                    <StackPanel Orientation="Horizontal">
                        <EfControls:Icon Width="20" Height="20" Data="{DynamicResource Icon.MaterialDesign.CodeBraces}"/>
                        <TextBlock Margin="6,0,0,0">Disabled w/ Icon</TextBlock>
                    </StackPanel>
                </Button>

                <TextBlock Text="Surface (Alternate):" VerticalAlignment="Center" TextAlignment="Right"/>
                <Button Margin="3" EfAttachedProps:Control.Color="SurfaceAlternate">Normal</Button>
                <Button Margin="3" EfAttachedProps:Control.Color="SurfaceAlternate" IsEnabled="False">Disabled</Button>
                <Button Margin="3" EfAttachedProps:Control.Color="SurfaceAlternate">
                    <StackPanel Orientation="Horizontal">
                        <EfControls:Icon Width="20" Height="20" Data="{DynamicResource Icon.MaterialDesign.CodeBraces}"/>
                        <TextBlock Margin="6,0,0,0">w/ Icon</TextBlock>
                    </StackPanel>
                </Button>
                <Button Margin="3" EfAttachedProps:Control.Color="SurfaceAlternate" IsEnabled="False">
                    <StackPanel Orientation="Horizontal">
                        <EfControls:Icon Width="20" Height="20" Data="{DynamicResource Icon.MaterialDesign.CodeBraces}"/>
                        <TextBlock Margin="6,0,0,0">Disabled w/ Icon</TextBlock>
                    </StackPanel>
                </Button>

                <TextBlock Text="Primary:" VerticalAlignment="Center" TextAlignment="Right"/>
                <Button Margin="3" EfAttachedProps:Control.Color="Primary">Normal</Button>
                <Button Margin="3" EfAttachedProps:Control.Color="Primary" IsEnabled="False">Disabled</Button>
                <Button Margin="3" EfAttachedProps:Control.Color="Primary">
                    <StackPanel Orientation="Horizontal">
                        <EfControls:Icon Width="20" Height="20" Data="{DynamicResource Icon.MaterialDesign.CodeBraces}"/>
                        <TextBlock Margin="6,0,0,0">w/ Icon</TextBlock>
                    </StackPanel>
                </Button>
                <Button Margin="3" EfAttachedProps:Control.Color="Primary" IsEnabled="False">
                    <StackPanel Orientation="Horizontal">
                        <EfControls:Icon Width="20" Height="20" Data="{DynamicResource Icon.MaterialDesign.CodeBraces}"/>
                        <TextBlock Margin="6,0,0,0">Disabled w/ Icon</TextBlock>
                    </StackPanel>
                </Button>

                <TextBlock Text="Primary (Darken):" VerticalAlignment="Center" TextAlignment="Right"/>
                <Button Margin="3" EfAttachedProps:Control.Color="PrimaryDarken">Normal</Button>
                <Button Margin="3" EfAttachedProps:Control.Color="PrimaryDarken" IsEnabled="False">Disabled</Button>
                <Button Margin="3" EfAttachedProps:Control.Color="PrimaryDarken">
                    <StackPanel Orientation="Horizontal">
                        <EfControls:Icon Width="20" Height="20" Data="{DynamicResource Icon.MaterialDesign.CodeBraces}"/>
                        <TextBlock Margin="6,0,0,0">w/ Icon</TextBlock>
                    </StackPanel>
                </Button>
                <Button Margin="3" EfAttachedProps:Control.Color="PrimaryDarken" IsEnabled="False">
                    <StackPanel Orientation="Horizontal">
                        <EfControls:Icon Width="20" Height="20" Data="{DynamicResource Icon.MaterialDesign.CodeBraces}"/>
                        <TextBlock Margin="6,0,0,0">Disabled w/ Icon</TextBlock>
                    </StackPanel>
                </Button>

                <TextBlock Text="Primary (Lighten):" VerticalAlignment="Center" TextAlignment="Right"/>
                <Button Margin="3" EfAttachedProps:Control.Color="PrimaryLighten">Normal</Button>
                <Button Margin="3" EfAttachedProps:Control.Color="PrimaryLighten" IsEnabled="False">Disabled</Button>
                <Button Margin="3" EfAttachedProps:Control.Color="PrimaryLighten">
                    <StackPanel Orientation="Horizontal">
                        <EfControls:Icon Width="20" Height="20" Data="{DynamicResource Icon.MaterialDesign.CodeBraces}"/>
                        <TextBlock Margin="6,0,0,0">w/ Icon</TextBlock>
                    </StackPanel>
                </Button>
                <Button Margin="3" EfAttachedProps:Control.Color="PrimaryLighten" IsEnabled="False">
                    <StackPanel Orientation="Horizontal">
                        <EfControls:Icon Width="20" Height="20" Data="{DynamicResource Icon.MaterialDesign.CodeBraces}"/>
                        <TextBlock Margin="6,0,0,0">Disabled w/ Icon</TextBlock>
                    </StackPanel>
                </Button>

                <TextBlock Text="Secondary:" VerticalAlignment="Center" TextAlignment="Right"/>
                <Button Margin="3" EfAttachedProps:Control.Color="Secondary">Normal</Button>
                <Button Margin="3" EfAttachedProps:Control.Color="Secondary" IsEnabled="False">Disabled</Button>
                <Button Margin="3" EfAttachedProps:Control.Color="Secondary">
                    <StackPanel Orientation="Horizontal">
                        <EfControls:Icon Width="20" Height="20" Data="{DynamicResource Icon.MaterialDesign.CodeBraces}"/>
                        <TextBlock Margin="6,0,0,0">w/ Icon</TextBlock>
                    </StackPanel>
                </Button>
                <Button Margin="3" EfAttachedProps:Control.Color="Secondary" IsEnabled="False">
                    <StackPanel Orientation="Horizontal">
                        <EfControls:Icon Width="20" Height="20" Data="{DynamicResource Icon.MaterialDesign.CodeBraces}"/>
                        <TextBlock Margin="6,0,0,0">Disabled w/ Icon</TextBlock>
                    </StackPanel>
                </Button>

                <TextBlock Text="Tertiary:" VerticalAlignment="Center" TextAlignment="Right"/>
                <Button Margin="3" EfAttachedProps:Control.Color="Tertiary">Normal</Button>
                <Button Margin="3" EfAttachedProps:Control.Color="Tertiary" IsEnabled="False">Disabled</Button>
                <Button Margin="3" EfAttachedProps:Control.Color="Tertiary">
                    <StackPanel Orientation="Horizontal">
                        <EfControls:Icon Width="20" Height="20" Data="{DynamicResource Icon.MaterialDesign.CodeBraces}"/>
                        <TextBlock Margin="6,0,0,0">w/ Icon</TextBlock>
                    </StackPanel>
                </Button>
                <Button Margin="3" EfAttachedProps:Control.Color="Tertiary" IsEnabled="False">
                    <StackPanel Orientation="Horizontal">
                        <EfControls:Icon Width="20" Height="20" Data="{DynamicResource Icon.MaterialDesign.CodeBraces}"/>
                        <TextBlock Margin="6,0,0,0">Disabled w/ Icon</TextBlock>
                    </StackPanel>
                </Button>

                <TextBlock Text="Custom Radius:" VerticalAlignment="Center" TextAlignment="Right"/>
                <Button Margin="3" EfAttachedProps:Control.CornerRadius="15" EfAttachedProps:Control.Color="Primary">Normal</Button>
                <Button Margin="3" EfAttachedProps:Control.CornerRadius="15" EfAttachedProps:Control.Color="Primary" IsEnabled="False">Disabled</Button>
                <Button Margin="3" EfAttachedProps:Control.CornerRadius="15" EfAttachedProps:Control.Color="Primary">
                    <StackPanel Orientation="Horizontal">
                        <EfControls:Icon Width="20" Height="20" Data="{DynamicResource Icon.MaterialDesign.CodeBraces}"/>
                        <TextBlock Margin="6,0,0,0">w/ Icon</TextBlock>
                    </StackPanel>
                </Button>
                <Button Margin="3" EfAttachedProps:Control.CornerRadius="15" EfAttachedProps:Control.Color="Primary" IsEnabled="False">
                    <StackPanel Orientation="Horizontal">
                        <EfControls:Icon Width="20" Height="20" Data="{DynamicResource Icon.MaterialDesign.CodeBraces}"/>
                        <TextBlock Margin="6,0,0,0">Disabled w/ Icon</TextBlock>
                    </StackPanel>
                </Button>

                <TextBlock Text="Float Action:" VerticalAlignment="Center" TextAlignment="Right"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Margin="3" EfAttachedProps:Control.CornerRadius="22" HorizontalAlignment="Center" EfAttachedProps:Control.Color="Primary" Padding="18,8">N</Button>
                    <Button Margin="3" EfAttachedProps:Control.Color="Secondary" EfAttachedProps:Control.CornerRadius="22" HorizontalAlignment="Center" Padding="18,8">N</Button>
                    <Button Margin="3" EfAttachedProps:Control.Color="Tertiary" EfAttachedProps:Control.CornerRadius="22" HorizontalAlignment="Center" Padding="18,8">N</Button>
                </StackPanel>
                <Button Margin="3" EfAttachedProps:Control.CornerRadius="22" HorizontalAlignment="Center" EfAttachedProps:Control.Color="Primary" Padding="18,8" IsEnabled="False">d</Button>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Margin="3" EfAttachedProps:Control.CornerRadius="22" HorizontalAlignment="Center" EfAttachedProps:Control.Color="Primary" Padding="12">
                        <EfControls:Icon Width="20" Height="20" Data="{DynamicResource Icon.MaterialDesign.CodeBraces}"/>
                    </Button>
                    <Button Margin="3" EfAttachedProps:Control.CornerRadius="22" HorizontalAlignment="Center" EfAttachedProps:Control.Color="Secondary" Padding="12">
                        <EfControls:Icon Width="20" Height="20" Data="{DynamicResource Icon.MaterialDesign.CodeBraces}"/>
                    </Button>
                    <Button Margin="3" EfAttachedProps:Control.CornerRadius="22" HorizontalAlignment="Center" EfAttachedProps:Control.Color="Tertiary" Padding="12">
                        <EfControls:Icon Width="20" Height="20" Data="{DynamicResource Icon.MaterialDesign.CodeBraces}"/>
                    </Button>
                </StackPanel>
                <Button Margin="3" EfAttachedProps:Control.CornerRadius="22" HorizontalAlignment="Center" EfAttachedProps:Control.Color="Primary" Padding="12" IsEnabled="False">
                    <EfControls:Icon Width="20" Height="20" Data="{DynamicResource Icon.MaterialDesign.CodeBraces}"/>
                </Button>
                <TextBlock Text="Custom Elevation:" VerticalAlignment="Center" TextAlignment="Right"/>
                <Button Margin="3" EfAttachedProps:Control.Color="Primary" EfAttachedProps:Control.Elevation="1">Default (1)</Button>
                <Button Margin="3" EfAttachedProps:Control.Color="Primary" EfAttachedProps:Control.Elevation="2">2</Button>
                <Button Margin="3" EfAttachedProps:Control.Color="Primary" EfAttachedProps:Control.Elevation="3">3</Button>
                <Button Margin="3" EfAttachedProps:Control.Color="Primary" EfAttachedProps:Control.Elevation="4">4</Button>
            </UniformGrid>
        </TabItem>
        <TabItem Header="Grids / Lists" 
                 x:Name="GridPage"
                 EfAttachedProps:TabControl.Icon="{DynamicResource Icon.MaterialDesign.Table}">
            <TabItem.Resources>
                <EfExpr:ExpressionBuilder x:Key="filters"/>
            </TabItem.Resources>
            <TabItem.DataContext>
                <local:TesteList x:Name="sampleData"/>
            </TabItem.DataContext>
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <GroupBox Header="DataGrid" Margin="10">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="220"/>
                        </Grid.ColumnDefinitions>
                        <DataGrid Margin="3" 
                                  x:Name="dgMain"
                                  EfAttachedProps:DataGrid.FilterViewModel="{StaticResource filters}"
                                  VerticalAlignment="Top"
                                  ItemsSource="{Binding}"
                                  HeadersVisibility="All">
                            <DataGrid.Columns>
                                <EfControls:DataGridInputColumn EfAttachedProps:DataGrid.ShowFilter="True"  Binding="{Binding Nome}" Header="Nome" Width="Auto" x:Name="nomeCl" />
                                <EfControls:DataGridEnumComboboxColumn ItemsSource="{x:Static local:TesteList.UfSource}"
                                                                       DisplayMemberPath="Description" 
                                                                       SelectedValuePath="Value" 
                                                                       LocalizationResourceType="{x:Type Resources:Strings}"
                                                                       SelectedValueBinding="{Binding Estado}" 
                                                                       Header="Estado (adv)" x:Name="ufAdvCl" Width="*"  />
                                <EfControls:DataGridEnumComboboxColumn ItemsSource="{x:Static local:TesteList.UfSource}"
                                                                       DisplayMemberPath="Value" 
                                                                       SelectedValuePath="Value" 
                                                                       SelectedValueBinding="{Binding Estado}" 
                                                                       Header="Estado" x:Name="ufCl" Width="80"  />
                                <EfControls:DataGridInputColumn EfAttachedProps:DataGrid.ShowFilter="True" Binding="{Binding BC, StringFormat=\{0:c2\}}" Header="BC" Width="Auto" InputMode="Number" NumberDecimalPlaces="2" Alignment="Right"  x:Name="bcCl"/>
                                <EfControls:DataGridInputColumn EfAttachedProps:DataGrid.ShowFilter="True" Binding="{Binding Aliquota, StringFormat=\{0:c2\}}" Header="Alíquota" InputMode="Number"  Width="Auto"  Alignment="Right"/>
                                <EfControls:DataGridInputColumn EfAttachedProps:DataGrid.ShowFilter="True" Binding="{Binding Valor, StringFormat=\{0:c2\}}" Header="Valor" InputMode="Number" Width="Auto"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <GroupBox Grid.Column="1" Margin="15,0,0,0" Header="Options">
                            <StackPanel >
                                <ComboBox EfAttachedProps:Control.TipText="Color"
                                          ItemsSource="{x:Static local:MainWindow.Colors}"
                                          DisplayMemberPath="Value"
                                          SelectedValuePath="Value"
                                          SelectedValue="{Binding ElementName=dgMain, Path=(EfAttachedProps:Control.Color), UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                          Margin="0,5,0,0"/>
                            </StackPanel>
                        </GroupBox>
                    </Grid>
                </GroupBox>
                <GroupBox Header="ListView / TreeVuew" Margin="10" Grid.Row="1">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="220"/>
                        </Grid.ColumnDefinitions>
                        <UniformGrid Margin="3" 
                                     Columns="2">
                            <ListView Margin="3" 
                                      x:Name="lstView"
                                      EfAttachedProps:Selector.AllowInactiveSelection="False"
                                      ItemsSource="{Binding}">
                            </ListView>
                            <TreeView Margin="3"
                                      EfAttachedProps:Control.Color="{Binding ElementName=lstView, Path=(EfAttachedProps:Control.Color), UpdateSourceTrigger=PropertyChanged}"
                                      EfAttachedProps:Selector.AllowInactiveSelection="{Binding ElementName=lstView, Path=(EfAttachedProps:Selector.AllowInactiveSelection), UpdateSourceTrigger=PropertyChanged}"
                                      ItemsSource="{Binding}">
                                <TreeView.Resources>
                                    <HierarchicalDataTemplate DataType="{x:Type local:TesteUpdate}" ItemsSource="{Binding Children}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Nome}" Margin="3,0,0,0"/>
                                            <TextBlock Text="{Binding Estado}" Margin="3,0,0,0"/>
                                        </StackPanel>
                                    </HierarchicalDataTemplate>
                                </TreeView.Resources>
                                <TreeView.ItemContainerStyle>
                                    <Style TargetType="{x:Type TreeViewItem}" BasedOn="{StaticResource {x:Type TreeViewItem}}">
                                        <Setter Property="IsExpanded" Value="True" />
                                    </Style>
                                </TreeView.ItemContainerStyle>
                            </TreeView>
                        </UniformGrid>
                        <GroupBox Grid.Column="1" Margin="15,0,0,0" Header="Options">
                            <StackPanel >
                                <CheckBox IsChecked="{Binding ElementName=lstView, Path=(EfAttachedProps:Selector.AllowInactiveSelection), Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                          Content="Inactive Selection" 
                                          Style="{DynamicResource Style.Checkbox.Modern}"/>
                                <ComboBox EfAttachedProps:Control.TipText="Color"
                                          ItemsSource="{x:Static local:MainWindow.Colors}"
                                          DisplayMemberPath="Value"
                                          SelectedValuePath="Value"
                                          SelectedValue="{Binding ElementName=lstView, Path=(EfAttachedProps:Control.Color), UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                          Margin="0,5,0,0"/>
                            </StackPanel>
                        </GroupBox>
                    </Grid>

                </GroupBox>
            </Grid>
        </TabItem>
        <TabItem Header="Inputs (Typing / Selectors)"
                EfAttachedProps:TabControl.Icon="{DynamicResource Icon.MaterialDesign.Pen}">
            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="15">
                    <GroupBox Header="Inputs" Margin="10">
                        <StackPanel>
                            <GroupBox Margin="15,0,15,15" Header="Text:">
                                <UniformGrid Columns="6">
                                    <TextBox EfAttachedProps:Control.TipText="default" Margin="3"/>
                                    <TextBox EfAttachedProps:Control.TipText="decorators" Margin="3">
                                        <EfAttachedProps:TextBox.StartElement>
                                            <EfControls:Icon Data="{DynamicResource Icon.MaterialDesign.Email}"/>
                                        </EfAttachedProps:TextBox.StartElement>
                                        <EfAttachedProps:TextBox.EndElement>
                                            <EfControls:Icon Data="{DynamicResource Icon.MaterialDesign.Contacts}"/>
                                        </EfAttachedProps:TextBox.EndElement>
                                    </TextBox>
                                    <TextBox IsReadOnly="True" EfAttachedProps:Control.TipText="read-only" Margin="3"/>
                                    <TextBox IsEnabled="False" EfAttachedProps:Control.TipText="disabled" Margin="3"/>
                                    <TextBox EfAttachedProps:Control.Color="Secondary" EfAttachedProps:Control.TipText="Secondary" Margin="3"/>
                                    <TextBox EfAttachedProps:Control.Color="Tertiary" EfAttachedProps:Control.TipText="Tertiary" Margin="3"/>
                                </UniformGrid>
                            </GroupBox>
                            <GroupBox Margin="15,0,15,15" Header="Password:">
                                <UniformGrid Columns="6">
                                    <PasswordBox EfAttachedProps:Control.TipText="default" Margin="3"/>
                                    <PasswordBox EfAttachedProps:Control.TipText="decorators" Margin="3">
                                        <EfAttachedProps:TextBox.StartElement>
                                            <EfControls:Icon Data="{DynamicResource Icon.MaterialDesign.Account}"/>
                                        </EfAttachedProps:TextBox.StartElement>
                                        <EfAttachedProps:TextBox.EndElement>
                                            <EfControls:Icon Data="{DynamicResource Icon.MaterialDesign.AccountBox}"/>
                                        </EfAttachedProps:TextBox.EndElement>
                                    </PasswordBox>
                                    <PasswordBox IsEnabled="False" EfAttachedProps:Control.TipText="read-only (disabled)" Margin="3"/>
                                    <PasswordBox IsEnabled="False" EfAttachedProps:Control.TipText="disabled" Margin="3"/>
                                    <PasswordBox EfAttachedProps:Control.Color="Secondary" EfAttachedProps:Control.TipText="Secondary" Margin="3"/>
                                    <PasswordBox EfAttachedProps:Control.Color="Tertiary" EfAttachedProps:Control.TipText="Tertiary" Margin="3"/>
                                </UniformGrid>
                            </GroupBox>
                            <GroupBox Margin="15,0,15,15" Header="Documents:">
                                <UniformGrid Columns="6">
                                    <EfControls:DocumentoInputBox EfAttachedProps:Control.TipText="default" Margin="3"/>
                                    <EfControls:DocumentoInputBox EfAttachedProps:Control.TipText="decorators" Margin="3">
                                        <EfAttachedProps:TextBox.StartElement>
                                            <EfControls:Icon Data="{DynamicResource Icon.MaterialDesign.FileDocument}"/>
                                        </EfAttachedProps:TextBox.StartElement>
                                        <EfAttachedProps:TextBox.EndElement>
                                            <EfControls:Icon Data="{DynamicResource Icon.MaterialDesign.Database}"/>
                                        </EfAttachedProps:TextBox.EndElement>
                                    </EfControls:DocumentoInputBox>
                                    <EfControls:DocumentoInputBox IsReadOnly="True" EfAttachedProps:Control.TipText="read-only" Margin="3"/>
                                    <EfControls:DocumentoInputBox IsEnabled="False" EfAttachedProps:Control.TipText="disabled" Margin="3"/>
                                    <EfControls:DocumentoInputBox EfAttachedProps:Control.Color="Secondary" EfAttachedProps:Control.TipText="Secondary" Margin="3"/>
                                    <EfControls:DocumentoInputBox EfAttachedProps:Control.Color="Tertiary" EfAttachedProps:Control.TipText="Tertiary" Margin="3"/>
                                </UniformGrid>
                            </GroupBox>
                            <GroupBox Margin="15,0,15,15" Header="Numbers:">
                                <UniformGrid Columns="6">
                                    <EfControls:NumberInputBox EfAttachedProps:Control.TipText="default" Margin="3"/>
                                    <EfControls:NumberInputBox EfAttachedProps:Control.TipText="decorators" Margin="3">
                                        <EfAttachedProps:TextBox.StartElement>
                                            <EfControls:Icon Data="{DynamicResource Icon.MaterialDesign.CurrencyBrl}"/>
                                        </EfAttachedProps:TextBox.StartElement>
                                        <EfAttachedProps:TextBox.EndElement>
                                            <EfControls:Icon Data="{DynamicResource Icon.MaterialDesign.Numeric}"/>
                                        </EfAttachedProps:TextBox.EndElement>
                                    </EfControls:NumberInputBox>
                                    <EfControls:NumberInputBox IsReadOnly="True" EfAttachedProps:Control.TipText="read-only" Margin="3"/>
                                    <EfControls:NumberInputBox IsEnabled="False" EfAttachedProps:Control.TipText="disabled" Margin="3"/>
                                    <EfControls:NumberInputBox EfAttachedProps:Control.Color="Secondary" EfAttachedProps:Control.TipText="Secondary" Margin="3"/>
                                    <EfControls:NumberInputBox EfAttachedProps:Control.Color="Tertiary" EfAttachedProps:Control.TipText="Tertiary" Margin="3"/>
                                </UniformGrid>
                            </GroupBox>
                            <GroupBox Margin="15,0,15,15" Header="Date:">
